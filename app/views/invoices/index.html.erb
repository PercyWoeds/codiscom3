<h1>Listado Facturas</h1>
<div class ="media">
<div class ="media-body">
<table class="table table-hover">

 <tr>
    <th>Cliente</th>
    <th>Fecha</th>
    <th>Td</th>
    <th>Serie</th>
    <th>Numero</th>
    <th>Preciocigv</th>
    <th>Preciosigv</th>
    <th>Cantidad</th>
    <th>Vventa</th>
    <th>Igv</th>
    <th>Importe</th>
    <th>Ruc</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @invoices.each do |invoice| %>
  <tr>
    <td><%= invoice.cliente %></td>
    <td><%= invoice.fecha %></td>
    <td><%= invoice.td %></td>
    <td><%= invoice.serie %></td>
    <td><%= invoice.numero %></td>
    <td><%= invoice.preciocigv %></td>
    <td><%= invoice.preciosigv %></td>
    <td><%= invoice.cantidad %></td>
    <td><%= invoice.vventa %></td>
    <td><%= invoice.igv %></td>
    <td><%= invoice.importe %></td>
    <td><%= invoice.ruc %></td>
    <td><%= invoice.vrazon2 %></td>
    <td><%= link_to 'Ver', invoice %></td>
    
  </tr>
<% end %>
</table>
  

</div>
  

</div>


<h2>Importar Archivo Facturas "*.csv"</h2>

<%= form_tag import_invoices_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Importar " %>
<% end %>


