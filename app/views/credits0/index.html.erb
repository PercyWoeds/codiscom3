<p id="notice"><%= notice %></p>

<h1>Listing Credits</h1>

<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Code</th>
      <th>Nota</th>
      <th>Motivo</th>
      <th>Subtotal</th>
      <th>Tax</th>
      <th>Total</th>
      <th>Moneda</th>
      <th>Mod factura</th>
      <th>Mod tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credits.each do |credit| %>
      <tr>
        <td><%= credit.fecha %></td>
        <td><%= credit.code %></td>
        <td><%= credit.nota_id %></td>
        <td><%= credit.motivo %></td>
        <td><%= credit.subtotal %></td>
        <td><%= credit.tax %></td>
        <td><%= credit.total %></td>
        <td><%= credit.moneda_id %></td>
        <td><%= credit.mod_factura %></td>
        <td><%= credit.mod_tipo %></td>
        <td><%= link_to 'Show', credit %></td>
        <td><%= link_to 'Edit', edit_credit_path(credit) %></td>
        <td><%= link_to 'Destroy', credit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

